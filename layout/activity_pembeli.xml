<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/header_layout_pembeli"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/tv_pembeli_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesan Menu Hari Ini - Meja XX"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/btn_logout_pembeli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keluar"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@android:color/holo_red_dark"
            style="?attr/materialButtonOutlinedStyle"
            android:textColor="@android:color/white"
            android:padding="8dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_keranjang_ringkasan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Keranjang: 0 item, Total: Rp 0"
        android:textColor="@android:color/holo_orange_dark"
        app:layout_constraintTop_toBottomOf="@id/header_layout_pembeli"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_pembeli_menu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        app:layout_constraintTop_toBottomOf="@id/tv_keranjang_ringkasan"
        app:layout_constraintBottom_toTopOf="@id/btn_konfirmasi_pesanan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_konfirmasi_pesanan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Lihat Keranjang / Konfirmasi Pesanan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>